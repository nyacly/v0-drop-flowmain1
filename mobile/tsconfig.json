{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": false,
    "types": ["expo-router"],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/contexts/*": ["src/contexts/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/lib/*": ["src/lib/*"],
      "@/types": ["src/types"],
      "@/utils/*": ["src/utils/*"],
      "@/theme": ["src/theme"],
      "@/constants/*": ["src/constants/*"]
    }
  }
}
